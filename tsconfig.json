{
  "compilerOptions": {
    "target": "ES6",                          // Target ECMAScript version
    "module": "ESNext",                       // Module system to use
    "strict": true,                           // Enable all strict type-checking options
    "jsx": "react",                           // Support JSX in .tsx files
    "moduleResolution": "node",               // Resolve modules like Node.js
    "esModuleInterop": true,                  // Interoperability between CommonJS and ES modules
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in module names
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src"                        // Root directory of source files
  },
  "include": ["src"],                         // Include the "src" directory
  "exclude": ["node_modules", "dist"]         // Exclude "node_modules" and "dist"
}
